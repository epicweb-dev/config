{
  "$schema": "https://json.schemastore.org/package",
  "name": "@epic-web/config",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-semantically-released",
  "description": "Reasonable ESLint configs for epic web devs",
  "main": "index.js",
  "type": "module",
  "imports": {
    "#/*": "./*"
  },
  "exports": {
    ".": "./index.js",
    "./prettier": "./prettier.js",
    "./typescript": "./typescript.json",
    "./reset.d.ts": "./reset.d.ts",
    "./eslint": "./eslint.js"
  },
  "prettier": "./prettier.js",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "typecheck": "tsc",
    "validate": "run-p -l format lint typecheck"
  },
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "typescript",
    "epic"
  ],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/epicweb-dev/config"
  },
  "homepage": "https://github.com/epicweb-dev/config",
  "license": "MIT",
  "dependencies": {
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/eslint-plugin": "^1.1.43",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.31.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.2",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
