{
  "$schema": "https://json.schemastore.org/package",
  "name": "@epic-web/config",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-semantically-released",
  "description": "Reasonable ESLint configs for epic web devs",
  "main": "index.js",
  "type": "module",
  "packageManager": "npm@10.9.4",
  "engines": {
    "node": ">=20.19.0"
  },
  "imports": {
    "#/*": "./*"
  },
  "exports": {
    ".": "./index.js",
    "./prettier": "./prettier.js",
    "./typescript": "./typescript.json",
    "./reset.d.ts": "./reset.d.ts",
    "./eslint": "./eslint.js",
    "./oxlint": "./oxlint-config.json"
  },
  "prettier": "./prettier.js",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "audit": "npm audit --audit-level=moderate",
    "typecheck": "tsc",
    "validate": "run-p -l format lint typecheck"
  },
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "typescript",
    "epic"
  ],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/epicweb-dev/config"
  },
  "homepage": "https://github.com/epicweb-dev/config",
  "license": "MIT",
  "dependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/eslint-plugin": "^1.6.7",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "globals": "^17.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.55.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/react": "^19.2.14",
    "eslint": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
